<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".nutridd_carbs3ii"
    tools:showIn="@layout/activity_nutridd_carbs3ii">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nutridd_carbs3ii_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="@string/nutriddcarbs3ii_1" />
        
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="600dp"
                    android:layout_height="400dp"
                    app:srcCompat="@drawable/carbs"/>
                
            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/nutridd_carbs3ii_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="@string/nutriddcarbs3ii_2" />

    </LinearLayout>


</androidx.core.widget.NestedScrollView>